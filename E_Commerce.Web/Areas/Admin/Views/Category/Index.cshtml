@model List<E_Commerce.Dto.CategoryDto>
@{
    ViewBag.Title = "Quản lý danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var filter = ViewBag.Filter as E_Commerce.Web.ViewModels.CategoryFilterViewModel ?? new E_Commerce.Web.ViewModels.CategoryFilterViewModel();
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-folder me-2"></i>Quản lý danh mục
                    </h4>
                    <a href="@Url.Action("Create", "Category")" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Tạo danh mục mới
                    </a>
                </div>
                <div class="card-body">
                    <!-- Filter Form -->
                    <div class="card mb-4 border-secondary">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">
                                <i class="fas fa-filter me-2"></i>Bộ lọc và Tìm kiếm
                            </h5>
                        </div>
                        <div class="card-body">
                            @using (Html.BeginForm("Index", "Category", FormMethod.Get, new { @class = "row g-3", id = "filterForm" }))
                            {
                                <div class="col-md-3">
                                    <label for="SearchTerm" class="form-label">
                                        <i class="fas fa-search me-1"></i>Tìm kiếm
                                    </label>
                                    <input type="text" 
                                           class="form-control" 
                                           id="SearchTerm" 
                                           name="SearchTerm" 
                                           value="@filter.SearchTerm" 
                                           placeholder="Nhập tên danh mục...">
                                </div>
                                <div class="col-md-2">
                                    <label for="IsActive" class="form-label">
                                        <i class="fas fa-toggle-on me-1"></i>Trạng thái
                                    </label>
                                    <select class="form-select" id="IsActive" name="IsActive">
                                        <option value="">Tất cả</option>
                                        <option value="true" @(filter.IsActive == true ? "selected" : "")>Kích hoạt</option>
                                        <option value="false" @(filter.IsActive == false ? "selected" : "")>Tắt</option>
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <label for="Level" class="form-label">
                                        <i class="fas fa-sitemap me-1"></i>Cấp độ
                                    </label>
                                    <select class="form-select" id="Level" name="Level">
                                        <option value="">Tất cả</option>
                                        <option value="1" @(filter.Level == 1 ? "selected" : "")>Bậc 1</option>
                                        <option value="2" @(filter.Level == 2 ? "selected" : "")>Bậc 2</option>
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <label for="SortBy" class="form-label">
                                        <i class="fas fa-sort me-1"></i>Sắp xếp theo
                                    </label>
                                    <select class="form-select" id="SortBy" name="SortBy">
                                        <option value="name" @(filter.SortBy == "name" ? "selected" : "")>Tên</option>
                                        <option value="createdDate" @(filter.SortBy == "createdDate" ? "selected" : "")>Ngày tạo</option>
                                        <option value="displayOrder" @(filter.SortBy == "displayOrder" ? "selected" : "")>Thứ tự</option>
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <label for="SortOrder" class="form-label">
                                        <i class="fas fa-arrow-up me-1"></i>Thứ tự
                                    </label>
                                    <select class="form-select" id="SortOrder" name="SortOrder">
                                        <option value="asc" @(filter.SortOrder == "asc" ? "selected" : "")>Tăng dần</option>
                                        <option value="desc" @(filter.SortOrder == "desc" ? "selected" : "")>Giảm dần</option>
                                    </select>
                                </div>
                                <div class="col-md-1 d-flex align-items-end">
                                    <button type="submit" class="btn btn-primary w-100 mb-0">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                                <div class="col-12">
                                    <button type="button" class="btn btn-secondary" onclick="resetFilter()">
                                        <i class="fas fa-redo me-2"></i>Đặt lại
                                    </button>
                                    @if (!string.IsNullOrEmpty(filter.SearchTerm) || filter.IsActive.HasValue || filter.Level.HasValue)
                                    {
                                        <span class="badge bg-info ms-2">
                                            <i class="fas fa-info-circle me-1"></i>
                                            Đang lọc: @Model.Count kết quả
                                        </span>
                                    }
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Results Count -->
                    @if (Model != null && Model.Any())
                    {
                        <div class="mb-3">
                            <span class="text-muted">
                                <i class="fas fa-list me-1"></i>
                                Tổng cộng: <strong>@Model.Count</strong> danh mục
                            </span>
                        </div>
                    }
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>ID</th>
                                        <th>Ảnh</th>
                                        <th>Tên danh mục</th>
                                        <th>Cấp độ</th>
                                        <th>Danh mục cha</th>
                                        <th>Thứ tự</th>
                                        <th>Trạng thái</th>
                                        <th>Ngày tạo</th>
                                        <th class="text-center">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var category in Model)
                                    {
                                        <tr>
                                            <td>@category.Id</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(category.ImageUrl))
                                                {
                                                    <img src="@category.ImageUrl" alt="@category.Name" class="img-thumbnail" style="width: 50px; height: 50px; object-fit: cover;" />
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                <strong>@category.Name</strong>
                                                @if (!string.IsNullOrEmpty(category.Alias))
                                                {
                                                    <br><small class="text-muted">/@category.Alias</small>
                                                }
                                            </td>
                                            <td>
                                                @if (category.ParentCategoryId.HasValue)
                                                {
                                                    <span class="badge bg-info">Bậc 2</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-primary">Bậc 1</span>
                                                }
                                            </td>
                                            <td>@(category.ParentCategoryName ?? "-")</td>
                                            <td>@category.DisplayOrder</td>
                                            <td>
                                                @if (category.IsActive)
                                                {
                                                    <span class="badge bg-success">Kích hoạt</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Tắt</span>
                                                }
                                            </td>
                                            <td>@category.CreatedDate.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("Edit", "Category", new { id = category.Id })" class="btn btn-sm btn-warning" title="Sửa">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <button class="btn btn-sm btn-danger" onclick="deleteCategory(@category.Id)" title="Xóa">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            @if (!string.IsNullOrEmpty(filter.SearchTerm) || filter.IsActive.HasValue || filter.Level.HasValue)
                            {
                                <text>Không tìm thấy danh mục nào phù hợp với bộ lọc. <a href="javascript:void(0)" onclick="resetFilter()">Xóa bộ lọc</a> hoặc <a href="@Url.Action("Create", "Category")">Tạo danh mục mới</a></text>
                            }
                            else
                            {
                                <text>Chưa có danh mục nào. <a href="@Url.Action("Create", "Category")">Tạo danh mục mới</a></text>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/toastr@2.1.4/toastr.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/toastr@2.1.4/build/toastr.min.css" rel="stylesheet" />

    <script>
        $(function () {
            toastr.options = {
                closeButton: true,
                progressBar: true,
                positionClass: "toast-top-right",
                timeOut: 3000,
                extendedTimeOut: 1000
            };

            window.deleteCategory = function (id) {
                Swal.fire({
                    title: 'Xóa danh mục?',
                    text: 'Bạn có chắc chắn muốn xóa danh mục này?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: 'Xóa',
                    cancelButtonText: 'Hủy'
                }).then(function (result) {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: '@Url.Action("Delete", "Category")',
                            type: 'POST',
                            data: { id: id, __RequestVerificationToken: $("input[name='__RequestVerificationToken']").val() },
                            success: function (response) {
                                if (response.success) {
                                    toastr.success(response.message || 'Xóa danh mục thành công');
                                    setTimeout(function () { location.reload(); }, 800);
                                } else {
                                    toastr.error(response.message || 'Có lỗi xảy ra');
                                }
                            },
                            error: function (xhr) {
                                var errorMessage = 'Có lỗi xảy ra khi xóa danh mục';
                                if (xhr.responseJSON && xhr.responseJSON.message) {
                                    errorMessage = xhr.responseJSON.message;
                                }
                                toastr.error(errorMessage);
                            }
                        });
                    }
                });
            };
        });

        function resetFilter() {
            window.location.href = '@Url.Action("Index", "Category")';
        }
    </script>
    @Html.AntiForgeryToken()
}

