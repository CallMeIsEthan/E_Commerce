@model List<E_Commerce.Dto.BrandDto>
@{
    ViewBag.Title = "Quản lý thương hiệu";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var filter = ViewBag.Filter as E_Commerce.Web.ViewModels.BrandFilterViewModel ?? new E_Commerce.Web.ViewModels.BrandFilterViewModel();
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-tag me-2"></i>Quản lý thương hiệu
                    </h4>
                    <a href="@Url.Action("Create", "Brand")" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Tạo thương hiệu mới
                    </a>
                </div>
                <div class="card-body">
                    <!-- Filter Form -->
                    <div class="card mb-4 border-secondary">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">
                                <i class="fas fa-filter me-2"></i>Bộ lọc và Tìm kiếm
                            </h5>
                        </div>
                        <div class="card-body">
                            @using (Html.BeginForm("Index", "Brand", FormMethod.Get, new { @class = "row g-3", id = "filterForm" }))
                            {
                                <div class="col-md-4">
                                    <label for="SearchTerm" class="form-label">
                                        <i class="fas fa-search me-1"></i>Tìm kiếm
                                    </label>
                                    <input type="text" 
                                           class="form-control" 
                                           id="SearchTerm" 
                                           name="SearchTerm" 
                                           value="@filter.SearchTerm" 
                                           placeholder="Nhập tên thương hiệu...">
                                </div>
                                <div class="col-md-2">
                                    <label for="IsActive" class="form-label">
                                        <i class="fas fa-toggle-on me-1"></i>Trạng thái
                                    </label>
                                    <select class="form-select" id="IsActive" name="IsActive">
                                        <option value="">Tất cả</option>
                                        <option value="true" @(filter.IsActive == true ? "selected" : "")>Kích hoạt</option>
                                        <option value="false" @(filter.IsActive == false ? "selected" : "")>Tắt</option>
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <label for="SortBy" class="form-label">
                                        <i class="fas fa-sort me-1"></i>Sắp xếp theo
                                    </label>
                                    <select class="form-select" id="SortBy" name="SortBy">
                                        <option value="name" @(filter.SortBy == "name" ? "selected" : "")>Tên</option>
                                        <option value="createdDate" @(filter.SortBy == "createdDate" ? "selected" : "")>Ngày tạo</option>
                                        <option value="displayOrder" @(filter.SortBy == "displayOrder" ? "selected" : "")>Thứ tự</option>
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <label for="SortOrder" class="form-label">
                                        <i class="fas fa-arrow-up me-1"></i>Thứ tự
                                    </label>
                                    <select class="form-select" id="SortOrder" name="SortOrder">
                                        <option value="asc" @(filter.SortOrder == "asc" ? "selected" : "")>Tăng dần</option>
                                        <option value="desc" @(filter.SortOrder == "desc" ? "selected" : "")>Giảm dần</option>
                                    </select>
                                </div>
                                <div class="col-md-2 d-flex align-items-end">
                                    <button type="submit" class="btn btn-primary w-100 mb-0">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                                <div class="col-12">
                                    <button type="button" class="btn btn-secondary" onclick="resetFilter()">
                                        <i class="fas fa-redo me-2"></i>Đặt lại
                                    </button>
                                    @if (!string.IsNullOrEmpty(filter.SearchTerm) || filter.IsActive.HasValue)
                                    {
                                        <span class="badge bg-info ms-2">
                                            <i class="fas fa-info-circle me-1"></i>
                                            Đang lọc: @Model.Count kết quả
                                        </span>
                                    }
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Results Count -->
                    @if (Model != null && Model.Any())
                    {
                        <div class="mb-3">
                            <span class="text-muted">
                                <i class="fas fa-list me-1"></i>
                                Tổng cộng: <strong>@Model.Count</strong> thương hiệu
                            </span>
                        </div>
                    }

                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-primary">
                                    <tr>
                                        <th>ID</th>
                                        <th>Logo</th>
                                        <th>Tên thương hiệu</th>
                                        <th>Mô tả</th>
                                        <th>Thứ tự</th>
                                        <th>Trạng thái</th>
                                        <th>Ngày tạo</th>
                                        <th class="text-center">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var brand in Model)
                                    {
                                        <tr>
                                            <td>@brand.Id</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(brand.LogoUrl))
                                                {
                                                    <img src="@brand.LogoUrl" alt="@brand.Name" class="img-thumbnail" style="width: 50px; height: 50px; object-fit: contain; background-color: #f8f9fa;" />
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                <strong>@brand.Name</strong>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(brand.Description))
                                                {
                                                    <span class="text-muted">@(brand.Description.Length > 50 ? brand.Description.Substring(0, 50) + "..." : brand.Description)</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>@brand.DisplayOrder</td>
                                            <td>
                                                @if (brand.IsActive)
                                                {
                                                    <span class="badge bg-success">Kích hoạt</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Tắt</span>
                                                }
                                            </td>
                                            <td>@brand.CreatedDate.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("Edit", "Brand", new { id = brand.Id })" class="btn btn-sm btn-warning" title="Sửa">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <button class="btn btn-sm btn-danger delete-brand-btn" data-id="@brand.Id" title="Xóa">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            @if (!string.IsNullOrEmpty(filter.SearchTerm) || filter.IsActive.HasValue)
                            {
                                <text>Không tìm thấy thương hiệu nào phù hợp với bộ lọc. <a href="javascript:void(0)" onclick="resetFilter()">Xóa bộ lọc</a> hoặc <a href="@Url.Action("Create", "Brand")">Tạo thương hiệu mới</a></text>
                            }
                            else
                            {
                                <text>Chưa có thương hiệu nào. <a href="@Url.Action("Create", "Brand")">Tạo thương hiệu mới</a></text>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/toastr@2.1.4/toastr.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/toastr@2.1.4/build/toastr.min.css" rel="stylesheet" />

    <script>
        $(function () {
            toastr.options = {
                closeButton: true,
                progressBar: true,
                positionClass: "toast-top-right",
                timeOut: 3000,
                extendedTimeOut: 1000
            };

            $('.delete-brand-btn').on('click', function (e) {
                e.preventDefault();
                var id = $(this).data('id');
                Swal.fire({
                    title: 'Xóa thương hiệu?',
                    text: 'Bạn có chắc chắn muốn xóa thương hiệu này?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: 'Xóa',
                    cancelButtonText: 'Hủy'
                }).then(function (result) {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: '@Url.Action("Delete", "Brand")',
                            type: 'POST',
                            data: {
                                id: id,
                                __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                            },
                            success: function (response) {
                                if (response.success) {
                                    toastr.success(response.message || 'Xóa thương hiệu thành công');
                                    setTimeout(function () {
                                        location.reload();
                                    }, 800);
                                } else {
                                    toastr.error(response.message || 'Có lỗi xảy ra');
                                }
                            },
                            error: function (xhr) {
                                var errorMessage = 'Có lỗi xảy ra khi xóa thương hiệu';
                                if (xhr.responseJSON && xhr.responseJSON.message) {
                                    errorMessage = xhr.responseJSON.message;
                                }
                                toastr.error(errorMessage);
                            }
                        });
                    }
                });
            });
        });

        function resetFilter() {
            window.location.href = '@Url.Action("Index", "Brand")';
        }
    </script>
    @Html.AntiForgeryToken()
}

