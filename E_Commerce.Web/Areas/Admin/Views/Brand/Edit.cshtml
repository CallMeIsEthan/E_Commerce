@model E_Commerce.Web.ViewModels.BrandCreateViewModel

@{
    ViewBag.Title = "Sửa thương hiệu";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var logoUrl = ViewBag.LogoUrl as string;
    var brandId = ViewBag.BrandId as int?;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-edit me-2"></i>Sửa thương hiệu
                    </h4>
                </div>
                <div class="card-body">
                    <form id="brandForm" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-md-8">
                                <div class="mb-3">
                                    <label for="Name" class="form-label">Tên thương hiệu <span class="text-danger">*</span></label>
                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @required = "required", @data_val = "true", @data_val_required = "Vui lòng nhập tên thương hiệu" })
                                </div>

                                <div class="mb-3">
                                    <label for="Description" class="form-label">Mô tả</label>
                                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @rows = "5" })
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="DisplayOrder" class="form-label">Thứ tự hiển thị</label>
                                            @Html.TextBoxFor(m => m.DisplayOrder, new { @class = "form-control", @type = "number", @min = "0" })
                                            <small class="form-text text-muted">Số càng nhỏ, hiển thị càng trước</small>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <div class="form-check mt-4">
                                                @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-check-input" })
                                                <label class="form-check-label" for="IsActive">Kích hoạt</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label for="Logo" class="form-label">Logo thương hiệu</label>
                                    <input type="file" id="Logo" name="Logo" class="form-control" accept="image/*" />
                                    <small class="form-text text-muted">Chấp nhận: JPG, PNG, GIF, WEBP (tối đa 10MB)</small>
                                    @if (!string.IsNullOrEmpty(logoUrl))
                                    {
                                        <div class="mt-2">
                                            <p class="text-muted mb-1">Logo hiện tại:</p>
                                            <img src="@logoUrl" alt="Current" class="img-thumbnail" style="max-width: 200px; max-height: 200px; object-fit: contain; background-color: #f8f9fa;" />
                                        </div>
                                    }
                                    <div id="logoPreview" class="mt-2" style="display: none;">
                                        <p class="text-muted mb-1">Logo mới:</p>
                                        <img id="previewImg" src="" alt="Preview" class="img-thumbnail" style="max-width: 200px; max-height: 200px; object-fit: contain; background-color: #f8f9fa;" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-2"></i>Cập nhật thương hiệu
                                </button>
                                <a href="@Url.Action("Index", "Brand")" class="btn btn-secondary">
                                    <i class="fas fa-times me-2"></i>Hủy
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/toastr@2.1.4/toastr.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/toastr@2.1.4/build/toastr.min.css" rel="stylesheet" />

    <script>
        $(document).ready(function () {
            // Preview logo khi chọn file
            $('#Logo').on('change', function (e) {
                var file = e.target.files[0];
                if (file) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        $('#previewImg').attr('src', e.target.result);
                        $('#logoPreview').show();
                    };
                    reader.readAsDataURL(file);
                } else {
                    $('#logoPreview').hide();
                }
            });

            // Xử lý submit form
            var isSubmitting = false;
            $('#brandForm').on('submit', function (e) {
                e.preventDefault();

                if (isSubmitting) {
                    return false;
                }

                // Validate form
                if (!$(this).valid()) {
                    var errors = [];
                    var validator = $(this).validate();
                    if (validator && validator.errorList) {
                        $.each(validator.errorList, function() {
                            errors.push(this.message);
                        });
                    }
                    $(this).find('.field-validation-error').each(function () {
                        var errorText = $(this).text().trim();
                        if (errorText) {
                            errors.push(errorText);
                        }
                    });
                    if (errors.length > 0) {
                        toastr.error(errors.join('<br>'));
                    } else {
                        toastr.error('Vui lòng kiểm tra lại thông tin đã nhập');
                    }
                    return false;
                }

                isSubmitting = true;
                var submitBtn = $(this).find('button[type="submit"]');
                var originalText = submitBtn.html();
                submitBtn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>Đang lưu...');

                var formData = new FormData(this);

                $.ajax({
                    url: '@Url.Action("Edit", "Brand", new { id = brandId })',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (response) {
                        if (response.success) {
                            toastr.success(response.message || 'Cập nhật thương hiệu thành công');
                            setTimeout(function () {
                                if (response.redirectUrl) {
                                    window.location.href = response.redirectUrl;
                                } else {
                                    window.location.href = '@Url.Action("Index", "Brand")';
                                }
                            }, 1500);
                        } else {
                            toastr.error(response.message || 'Có lỗi xảy ra');
                            isSubmitting = false;
                            submitBtn.prop('disabled', false).html(originalText);
                        }
                    },
                    error: function (xhr, status, error) {
                        var errorMessage = 'Có lỗi xảy ra khi cập nhật thương hiệu';
                        if (xhr.responseJSON && xhr.responseJSON.message) {
                            errorMessage = xhr.responseJSON.message;
                        } else if (xhr.responseText) {
                            try {
                                var response = JSON.parse(xhr.responseText);
                                if (response.message) {
                                    errorMessage = response.message;
                                }
                            } catch (e) {
                                errorMessage = xhr.responseText.substring(0, 200);
                            }
                        }
                        toastr.error(errorMessage);
                        isSubmitting = false;
                        submitBtn.prop('disabled', false).html(originalText);
                    }
                });

                return false;
            });
        });
    </script>
}

