@model E_Commerce.Web.ViewModels.DiscountCodeCreateViewModel

@{
    ViewBag.Title = "Sửa mã giảm giá";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var discountCodeId = ViewBag.DiscountCodeId as int?;
    var usedCount = ViewBag.UsedCount as int? ?? 0;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-edit me-2"></i>Sửa mã giảm giá
                    </h4>
                </div>
                <div class="card-body">
                    <form id="discountCodeForm">
                        @Html.AntiForgeryToken()

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            Mã giảm giá này đã được sử dụng <strong>@usedCount</strong> lần.
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="Code" class="form-label">Mã giảm giá <span class="text-danger">*</span></label>
                                    @Html.TextBoxFor(m => m.Code, new { @class = "form-control", @required = "required", @placeholder = "VD: SALE2024", @maxlength = "50" })
                                    <small class="form-text text-muted">Mã phải là duy nhất, không trùng lặp</small>
                                </div>

                                <div class="mb-3">
                                    <label for="Name" class="form-label">Tên mã giảm giá <span class="text-danger">*</span></label>
                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @required = "required", @placeholder = "VD: Giảm giá 20% cho đơn hàng trên 500k" })
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="DiscountType" class="form-label">Loại giảm giá <span class="text-danger">*</span></label>
                                            <select id="DiscountType" name="DiscountType" class="form-select" required>
                                                <option value="Percentage" @(Model.DiscountType == "Percentage" ? "selected" : "")>Phần trăm (%)</option>
                                                <option value="FixedAmount" @(Model.DiscountType == "FixedAmount" ? "selected" : "")>Số tiền cố định (VNĐ)</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="DiscountValue" class="form-label">Giá trị giảm giá <span class="text-danger">*</span></label>
                                            <div class="input-group">
                                                <input type="number" id="DiscountValue" name="DiscountValue" class="form-control" step="0.01" min="0.01" required value="@(Model.DiscountValue % 1 == 0 ? Model.DiscountValue.ToString("0", System.Globalization.CultureInfo.InvariantCulture) : Model.DiscountValue.ToString(System.Globalization.CultureInfo.InvariantCulture))" />
                                                <span class="input-group-text" id="discountUnit">%</span>
                                            </div>
                                            <small class="form-text text-muted" id="discountValueHint">Nhập số phần trăm (VD: 20 = 20%)</small>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="MinOrderAmount" class="form-label">Đơn hàng tối thiểu</label>
                                    <div class="input-group">
                                        <input type="number" id="MinOrderAmount" name="MinOrderAmount" class="form-control" step="1000" min="0" placeholder="0" value="@(Model.MinOrderAmount.HasValue ? (Model.MinOrderAmount.Value % 1 == 0 ? Model.MinOrderAmount.Value.ToString("0", System.Globalization.CultureInfo.InvariantCulture) : Model.MinOrderAmount.Value.ToString(System.Globalization.CultureInfo.InvariantCulture)) : "")" />
                                        <span class="input-group-text">VNĐ</span>
                                    </div>
                                    <small class="form-text text-muted">Để trống nếu không có yêu cầu tối thiểu</small>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="UsageLimit" class="form-label">Giới hạn tổng số lần sử dụng</label>
                                    @Html.TextBoxFor(m => m.UsageLimit, new { @class = "form-control", @type = "number", @min = "1", @placeholder = "Không giới hạn" })
                                    <small class="form-text text-muted">Giới hạn tổng số lần sử dụng của toàn bộ user. Để trống nếu không giới hạn.</small>
                                </div>

                                <div class="mb-3">
                                    <label for="PerUserLimit" class="form-label">Giới hạn số lần mỗi user</label>
                                    @Html.TextBoxFor(m => m.PerUserLimit, new { @class = "form-control", @type = "number", @min = "1", @placeholder = "Không giới hạn" })
                                    <small class="form-text text-muted">Giới hạn số lần mỗi user được sử dụng mã này. Để trống nếu không giới hạn.</small>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="StartDate" class="form-label">Ngày bắt đầu <span class="text-danger">*</span></label>
                                            <input type="datetime-local" id="StartDate" name="StartDate" class="form-control" required value="@Model.StartDate.ToString("yyyy-MM-ddTHH:mm")" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="EndDate" class="form-label">Ngày kết thúc <span class="text-danger">*</span></label>
                                            <input type="datetime-local" id="EndDate" name="EndDate" class="form-control" required value="@Model.EndDate.ToString("yyyy-MM-ddTHH:mm")" />
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <div class="form-check mt-4">
                                        @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-check-input" })
                                        <label class="form-check-label" for="IsActive">Kích hoạt</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-2"></i>Cập nhật mã giảm giá
                                </button>
                                <a href="@Url.Action("Index", "DiscountCode")" class="btn btn-secondary">
                                    <i class="fas fa-times me-2"></i>Hủy
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/toastr@2.1.4/toastr.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/toastr@2.1.4/build/toastr.min.css" rel="stylesheet" />

    <script>
        $(document).ready(function () {
            // Update discount unit and hint based on discount type
            function updateDiscountType() {
                var discountType = $('#DiscountType').val();
                if (discountType === 'Percentage') {
                    $('#discountUnit').text('%');
                    $('#discountValueHint').text('Nhập số phần trăm (VD: 20 = 20%)');
                    $('#DiscountValue').attr('max', '100');
                } else {
                    $('#discountUnit').text('VNĐ');
                    $('#discountValueHint').text('Nhập số tiền giảm (VD: 50000 = 50,000đ)');
                    $('#DiscountValue').removeAttr('max');
                }
            }

            // Format datetime-local inputs - sử dụng format từ server
            var startDateStr = '@Model.StartDate.ToString("yyyy-MM-ddTHH:mm")';
            var endDateStr = '@Model.EndDate.ToString("yyyy-MM-ddTHH:mm")';
            
            // Set values from model
            $('#StartDate').val(startDateStr);
            $('#EndDate').val(endDateStr);
            
            // Format số - đảm bảo dùng dấu chấm (.) thay vì dấu phẩy (,) và không hiển thị .00
            // Giá trị đã được set trong HTML value attribute, không cần set lại bằng JavaScript
            
            // Đảm bảo DiscountType được select đúng từ Model
            var discountType = '@Model.DiscountType';
            if (discountType) {
                $('#DiscountType').val(discountType);
            }
            
            // Update discount type UI sau khi set giá trị (phải gọi sau khi set DiscountType)
            updateDiscountType();
            
            // Bind event handler sau khi đã set giá trị
            $('#DiscountType').on('change', updateDiscountType);

            // Xử lý submit form
            var isSubmitting = false;
            $('#discountCodeForm').on('submit', function (e) {
                e.preventDefault();

                if (isSubmitting) {
                    return false;
                }

                // Validate form
                if (!$(this).valid()) {
                    var errors = [];
                    var validator = $(this).validate();
                    if (validator && validator.errorList) {
                        $.each(validator.errorList, function() {
                            errors.push(this.message);
                        });
                    }
                    $(this).find('.field-validation-error').each(function () {
                        var errorText = $(this).text().trim();
                        if (errorText) {
                            errors.push(errorText);
                        }
                    });
                    if (errors.length > 0) {
                        toastr.error(errors.join('<br>'));
                    } else {
                        toastr.error('Vui lòng kiểm tra lại thông tin đã nhập');
                    }
                    return false;
                }

                // Validate dates
                var startDate = new Date($('#StartDate').val());
                var endDate = new Date($('#EndDate').val());
                var originalStartDate = new Date('@Model.StartDate.ToString("yyyy-MM-ddTHH:mm")');
                var now = new Date();
                now.setHours(0, 0, 0, 0);
                startDate.setHours(0, 0, 0, 0);
                originalStartDate.setHours(0, 0, 0, 0);
                
                // Chỉ validate nếu ngày bắt đầu mới khác với ngày cũ và nhỏ hơn hôm nay
                if (startDate.getTime() !== originalStartDate.getTime() && startDate < now) {
                    toastr.error('Ngày bắt đầu không được nhỏ hơn ngày hiện tại');
                    return false;
                }
                
                if (endDate <= startDate) {
                    toastr.error('Ngày kết thúc phải sau ngày bắt đầu');
                    return false;
                }

                isSubmitting = true;
                var submitBtn = $(this).find('button[type="submit"]');
                var originalText = submitBtn.html();
                submitBtn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>Đang lưu...');

                var formData = $(this).serialize();

                $.ajax({
                    url: '@Url.Action("Edit", "DiscountCode", new { id = discountCodeId })',
                    type: 'POST',
                    data: formData,
                    success: function (response) {
                        if (response.success) {
                            toastr.success(response.message || 'Cập nhật mã giảm giá thành công');
                            setTimeout(function () {
                                if (response.redirectUrl) {
                                    window.location.href = response.redirectUrl;
                                } else {
                                    window.location.href = '@Url.Action("Index", "DiscountCode")';
                                }
                            }, 1500);
                        } else {
                            toastr.error(response.message || 'Có lỗi xảy ra');
                            isSubmitting = false;
                            submitBtn.prop('disabled', false).html(originalText);
                        }
                    },
                    error: function (xhr, status, error) {
                        var errorMessage = 'Có lỗi xảy ra khi cập nhật mã giảm giá';
                        if (xhr.responseJSON && xhr.responseJSON.message) {
                            errorMessage = xhr.responseJSON.message;
                        } else if (xhr.responseText) {
                            try {
                                var response = JSON.parse(xhr.responseText);
                                if (response.message) {
                                    errorMessage = response.message;
                                }
                            } catch (e) {
                                errorMessage = xhr.responseText.substring(0, 200);
                            }
                        }
                        toastr.error(errorMessage);
                        isSubmitting = false;
                        submitBtn.prop('disabled', false).html(originalText);
                    }
                });

                return false;
            });
        });
    </script>
}

