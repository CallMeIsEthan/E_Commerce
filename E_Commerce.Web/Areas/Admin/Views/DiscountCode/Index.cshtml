@model List<E_Commerce.Dto.DiscountCodeDto>
@{
    ViewBag.Title = "Quản lý mã giảm giá";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var filter = ViewBag.Filter as E_Commerce.Web.ViewModels.DiscountCodeFilterViewModel ?? new E_Commerce.Web.ViewModels.DiscountCodeFilterViewModel();
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-ticket-alt me-2"></i>Quản lý mã giảm giá
                    </h4>
                    <a href="@Url.Action("Create", "DiscountCode")" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Tạo mã giảm giá mới
                    </a>
                </div>
                <div class="card-body">
                    <!-- Filter Form -->
                    <div class="card mb-4 border-secondary">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">
                                <i class="fas fa-filter me-2"></i>Bộ lọc và Tìm kiếm
                            </h5>
                        </div>
                        <div class="card-body">
                            @using (Html.BeginForm("Index", "DiscountCode", FormMethod.Get, new { @class = "row g-3", id = "filterForm" }))
                            {
                                <div class="col-md-4">
                                    <label for="SearchTerm" class="form-label">
                                        <i class="fas fa-search me-1"></i>Tìm kiếm
                                    </label>
                                    <input type="text" 
                                           class="form-control" 
                                           id="SearchTerm" 
                                           name="SearchTerm" 
                                           value="@filter.SearchTerm" 
                                           placeholder="Nhập mã hoặc tên...">
                                </div>
                                <div class="col-md-2">
                                    <label for="IsActive" class="form-label">
                                        <i class="fas fa-toggle-on me-1"></i>Trạng thái
                                    </label>
                                    <select class="form-select" id="IsActive" name="IsActive">
                                        <option value="">Tất cả</option>
                                        <option value="true" @(filter.IsActive == true ? "selected" : "")>Kích hoạt</option>
                                        <option value="false" @(filter.IsActive == false ? "selected" : "")>Tắt</option>
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <label for="SortBy" class="form-label">
                                        <i class="fas fa-sort me-1"></i>Sắp xếp theo
                                    </label>
                                    <select class="form-select" id="SortBy" name="SortBy">
                                        <option value="code" @(filter.SortBy == "code" ? "selected" : "")>Mã</option>
                                        <option value="name" @(filter.SortBy == "name" ? "selected" : "")>Tên</option>
                                        <option value="startDate" @(filter.SortBy == "startDate" ? "selected" : "")>Ngày bắt đầu</option>
                                        <option value="endDate" @(filter.SortBy == "endDate" ? "selected" : "")>Ngày kết thúc</option>
                                        <option value="createdDate" @(filter.SortBy == "createdDate" ? "selected" : "")>Ngày tạo</option>
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <label for="SortOrder" class="form-label">
                                        <i class="fas fa-arrow-up me-1"></i>Thứ tự
                                    </label>
                                    <select class="form-select" id="SortOrder" name="SortOrder">
                                        <option value="asc" @(filter.SortOrder == "asc" ? "selected" : "")>Tăng dần</option>
                                        <option value="desc" @(filter.SortOrder == "desc" ? "selected" : "")>Giảm dần</option>
                                    </select>
                                </div>
                                <div class="col-md-2 d-flex align-items-end">
                                    <button type="submit" class="btn btn-primary w-100 mb-0">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                                <div class="col-12">
                                    <button type="button" class="btn btn-secondary" onclick="resetFilter()">
                                        <i class="fas fa-redo me-2"></i>Đặt lại
                                    </button>
                                    @if (!string.IsNullOrEmpty(filter.SearchTerm) || filter.IsActive.HasValue)
                                    {
                                        <span class="badge bg-info ms-2">
                                            <i class="fas fa-info-circle me-1"></i>
                                            Đang lọc: @Model.Count kết quả
                                        </span>
                                    }
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Results Count -->
                    @if (Model != null && Model.Any())
                    {
                        <div class="mb-3">
                            <span class="text-muted">
                                <i class="fas fa-list me-1"></i>
                                Tổng cộng: <strong>@Model.Count</strong> mã giảm giá
                            </span>
                        </div>
                    }

                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-primary">
                                    <tr>
                                        <th>ID</th>
                                        <th>Mã</th>
                                        <th>Tên</th>
                                        <th>Loại</th>
                                        <th>Giá trị</th>
                                        <th>Đơn tối thiểu</th>
                                        <th>Đã dùng</th>
                                        <th>Giới hạn tổng</th>
                                        <th>Giới hạn/user</th>
                                        <th>Thời gian</th>
                                        <th>Trạng thái</th>
                                        <th class="text-center">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var discountCode in Model)
                                    {
                                        <tr>
                                            <td>@discountCode.Id</td>
                                            <td>
                                                <strong class="text-primary">@discountCode.Code</strong>
                                            </td>
                                            <td>@discountCode.Name</td>
                                            <td>
                                                @if (discountCode.DiscountType == "Percentage")
                                                {
                                                    <span class="badge bg-info">%</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">VNĐ</span>
                                                }
                                            </td>
                                            <td>
                                                @if (discountCode.DiscountType == "Percentage")
                                                {
                                                    <text>@discountCode.DiscountValue%</text>
                                                }
                                                else
                                                {
                                                    <text>@discountCode.DiscountValue.ToString("N0")<u>đ</u></text>
                                                }
                                            </td>
                                            <td>
                                                @if (discountCode.MinOrderAmount.HasValue)
                                                {
                                                    <text>@discountCode.MinOrderAmount.Value.ToString("N0")<u>đ</u></text>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@discountCode.UsedCount</span>
                                            </td>
                                            <td>
                                                @if (discountCode.UsageLimit.HasValue)
                                                {
                                                    <text>@discountCode.UsageLimit</text>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Không giới hạn</span>
                                                }
                                            </td>
                                            <td>
                                                @if (discountCode.PerUserLimit.HasValue)
                                                {
                                                    <text>@discountCode.PerUserLimit</text>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Không giới hạn</span>
                                                }
                                            </td>
                                            <td>
                                                <small>
                                                    <div>@discountCode.StartDate.ToString("dd/MM/yyyy")</div>
                                                    <div class="text-muted">@discountCode.EndDate.ToString("dd/MM/yyyy")</div>
                                                </small>
                                            </td>
                                            <td>
                                                @if (discountCode.IsValid)
                                                {
                                                    <span class="badge bg-success">Hợp lệ</span>
                                                }
                                                else if (discountCode.IsActive)
                                                {
                                                    <span class="badge bg-warning">Hết hạn</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Tắt</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("Edit", "DiscountCode", new { id = discountCode.Id })" class="btn btn-sm btn-warning" title="Sửa">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <button class="btn btn-sm btn-danger delete-discountcode-btn" data-id="@discountCode.Id" title="Xóa">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            @if (!string.IsNullOrEmpty(filter.SearchTerm) || filter.IsActive.HasValue)
                            {
                                <text>Không tìm thấy mã giảm giá nào phù hợp với bộ lọc. <a href="javascript:void(0)" onclick="resetFilter()">Xóa bộ lọc</a> hoặc <a href="@Url.Action("Create", "DiscountCode")">Tạo mã giảm giá mới</a></text>
                            }
                            else
                            {
                                <text>Chưa có mã giảm giá nào. <a href="@Url.Action("Create", "DiscountCode")">Tạo mã giảm giá mới</a></text>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/toastr@2.1.4/toastr.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/toastr@2.1.4/build/toastr.min.css" rel="stylesheet" />

    <script>
        $(function () {
            toastr.options = {
                closeButton: true,
                progressBar: true,
                positionClass: "toast-top-right",
                timeOut: 3000,
                extendedTimeOut: 1000
            };

            $('.delete-discountcode-btn').on('click', function (e) {
                e.preventDefault();
                var id = $(this).data('id');
                Swal.fire({
                    title: 'Xóa mã giảm giá?',
                    text: 'Bạn có chắc chắn muốn xóa mã giảm giá này?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: 'Xóa',
                    cancelButtonText: 'Hủy'
                }).then(function (result) {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: '@Url.Action("Delete", "DiscountCode")',
                            type: 'POST',
                            data: {
                                id: id,
                                __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                            },
                            success: function (response) {
                                if (response.success) {
                                    toastr.success(response.message || 'Xóa mã giảm giá thành công');
                                    setTimeout(function () {
                                        location.reload();
                                    }, 800);
                                } else {
                                    toastr.error(response.message || 'Có lỗi xảy ra');
                                }
                            },
                            error: function (xhr) {
                                var errorMessage = 'Có lỗi xảy ra khi xóa mã giảm giá';
                                if (xhr.responseJSON && xhr.responseJSON.message) {
                                    errorMessage = xhr.responseJSON.message;
                                }
                                toastr.error(errorMessage);
                            }
                        });
                    }
                });
            });
        });

        function resetFilter() {
            window.location.href = '@Url.Action("Index", "DiscountCode")';
        }
    </script>
    @Html.AntiForgeryToken()
}

