@model List<E_Commerce.Dto.ProductDto>
@using System.Web.Mvc.Html
@{
    ViewBag.Title = "Quản lý sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var filter = ViewBag.Filter as E_Commerce.Web.ViewModels.ProductFilterViewModel ?? new E_Commerce.Web.ViewModels.ProductFilterViewModel();
    var categories = ViewBag.Categories as System.Web.Mvc.SelectList;
    var brands = ViewBag.Brands as System.Web.Mvc.SelectList;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-box me-2"></i>Quản lý sản phẩm
                    </h4>
                    <a href="@Url.Action("Create", "Product")" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Tạo sản phẩm mới
                    </a>
                </div>
                <div class="card-body">
                    <!-- Filter Form -->
                    <div class="card mb-4 border-secondary">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">
                                <i class="fas fa-filter me-2"></i>Bộ lọc và Tìm kiếm
                            </h5>
                        </div>
                        <div class="card-body">
                            @using (Html.BeginForm("Index", "Product", FormMethod.Get, new { @class = "row g-3", id = "filterForm" }))
                            {
                                <!-- Hàng 1: Tìm kiếm và các filter chính -->
                                <div class="col-md-4">
                                    <label for="SearchTerm" class="form-label">
                                        <i class="fas fa-search me-1"></i>Tìm kiếm
                                    </label>
                                    <input type="text" 
                                           class="form-control" 
                                           id="SearchTerm" 
                                           name="SearchTerm" 
                                           value="@filter.SearchTerm" 
                                           placeholder="Tên, SKU, mô tả...">
                                </div>
                                <div class="col-md-2">
                                    <label for="CategoryId" class="form-label">
                                        <i class="fas fa-folder me-1"></i>Danh mục
                                    </label>
                                    @Html.DropDownList("CategoryId", categories, "-- Tất cả --", new { @class = "form-select", id = "CategoryId" })
                                </div>
                                <div class="col-md-2">
                                    <label for="BrandId" class="form-label">
                                        <i class="fas fa-tag me-1"></i>Thương hiệu
                                    </label>
                                    @Html.DropDownList("BrandId", brands, "-- Tất cả --", new { @class = "form-select", id = "BrandId" })
                                </div>
                                <div class="col-md-2">
                                    <label for="IsActive" class="form-label">
                                        <i class="fas fa-toggle-on me-1"></i>Trạng thái
                                    </label>
                                    <select class="form-select" id="IsActive" name="IsActive">
                                        <option value="">Tất cả</option>
                                        <option value="true" @(filter.IsActive == true ? "selected" : "")>Kích hoạt</option>
                                        <option value="false" @(filter.IsActive == false ? "selected" : "")>Tắt</option>
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <label for="IsFeatured" class="form-label">
                                        <i class="fas fa-star me-1"></i>Nổi bật
                                    </label>
                                    <select class="form-select" id="IsFeatured" name="IsFeatured">
                                        <option value="">Tất cả</option>
                                        <option value="true" @(filter.IsFeatured == true ? "selected" : "")>Có</option>
                                        <option value="false" @(filter.IsFeatured == false ? "selected" : "")>Không</option>
                                    </select>
                                </div>

                                <!-- Hàng 2: Filter bổ sung và sắp xếp -->
                                <div class="col-md-2">
                                    <label for="IsOnSale" class="form-label">
                                        <i class="fas fa-percent me-1"></i>Giảm giá
                                    </label>
                                    <select class="form-select" id="IsOnSale" name="IsOnSale">
                                        <option value="">Tất cả</option>
                                        <option value="true" @(filter.IsOnSale == true ? "selected" : "")>Có</option>
                                        <option value="false" @(filter.IsOnSale == false ? "selected" : "")>Không</option>
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <label for="SortBy" class="form-label">
                                        <i class="fas fa-sort me-1"></i>Sắp xếp theo
                                    </label>
                                    <select class="form-select" id="SortBy" name="SortBy">
                                        <option value="name" @(filter.SortBy == "name" ? "selected" : "")>Tên</option>
                                        <option value="price" @(filter.SortBy == "price" ? "selected" : "")>Giá</option>
                                        <option value="createdDate" @(filter.SortBy == "createdDate" ? "selected" : "")>Ngày tạo</option>
                                        <option value="stockQuantity" @(filter.SortBy == "stockQuantity" ? "selected" : "")>Tồn kho</option>
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <label for="SortOrder" class="form-label">
                                        <i class="fas fa-arrow-up me-1"></i>Thứ tự
                                    </label>
                                    <select class="form-select" id="SortOrder" name="SortOrder">
                                        <option value="asc" @(filter.SortOrder == "asc" ? "selected" : "")>Tăng dần</option>
                                        <option value="desc" @(filter.SortOrder == "desc" ? "selected" : "")>Giảm dần</option>
                                    </select>
                                </div>
                                <div class="col-md-2 d-flex align-items-end">
                                    <button type="submit" class="btn btn-primary w-100 mb-0">
                                        <i class="fas fa-search me-1"></i>Tìm kiếm
                                    </button>
                                </div>
                                <div class="col-md-4 d-flex align-items-end">
                                    <button type="button" class="btn btn-secondary" onclick="resetFilter()">
                                        <i class="fas fa-redo me-2"></i>Đặt lại bộ lọc
                                    </button>
                                    @if (!string.IsNullOrEmpty(filter.SearchTerm) || filter.IsActive.HasValue || filter.CategoryId.HasValue || filter.BrandId.HasValue || filter.IsFeatured.HasValue || filter.IsOnSale.HasValue)
                                    {
                                        <span class="badge bg-info ms-2 align-self-center">
                                            <i class="fas fa-info-circle me-1"></i>
                                            Đang lọc: @Model.Count kết quả
                                        </span>
                                    }
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Results Count -->
                    @if (Model != null && Model.Any())
                    {
                        <div class="mb-3">
                            <span class="text-muted">
                                <i class="fas fa-list me-1"></i>
                                Tổng cộng: <strong>@Model.Count</strong> sản phẩm
                            </span>
                        </div>
                    }

                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover align-middle">
                                <thead class="table-primary">
                                    <tr>
                                        <th style="width: 60px;">ID</th>
                                        <th style="width: 80px;">Ảnh</th>
                                        <th>Tên sản phẩm</th>
                                        <th style="width: 150px;">Danh mục</th>
                                        <th style="width: 120px;">Thương hiệu</th>
                                        <th style="width: 120px;" class="text-end">Giá</th>
                                        <th style="width: 100px;" class="text-center">Tồn kho</th>
                                        <th style="width: 150px;">Trạng thái</th>
                                        <th style="width: 150px;" class="text-center">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model)
                                    {
                                        <tr>
                                            <td><span class="badge bg-secondary">#@product.Id</span></td>
                                            <td>
                                                @{
                                                    var productMainImages = ViewBag.ProductMainImages as Dictionary<int, string>;
                                                    var mainImageUrl = productMainImages != null && productMainImages.ContainsKey(product.Id) 
                                                        ? productMainImages[product.Id] 
                                                        : null;
                                                }
                                                @if (!string.IsNullOrEmpty(mainImageUrl))
                                                {
                                                    <img src="@mainImageUrl" alt="@product.Name" class="img-thumbnail rounded" style="width: 60px; height: 60px; object-fit: cover;" />
                                                }
                                                else
                                                {
                                                    <div class="bg-light rounded d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                                        <i class="fas fa-image text-muted"></i>
                                                    </div>
                                                }
                                            </td>
                                            <td>
                                                <div class="fw-bold">@product.Name</div>
                                                @if (!string.IsNullOrEmpty(product.SKU))
                                                {
                                                    <small class="text-muted">SKU: @product.SKU</small>
                                                }
                                            </td>
                                            <td>@product.CategoryName</td>
                                            <td>@(product.BrandName ?? "<span class='text-muted'>-</span>")</td>
                                            <td class="text-end">
                                                @if (product.CompareAtPrice.HasValue && product.CompareAtPrice > product.Price)
                                                {
                                                    <div>
                                                        <span class="text-danger fw-bold">@product.Price.ToString("N0") đ</span>
                                                        <br />
                                                        <small class="text-muted text-decoration-line-through">@product.CompareAtPrice.Value.ToString("N0") đ</small>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="fw-bold">@product.Price.ToString("N0") đ</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                @if (product.StockQuantity > 0)
                                                {
                                                    <span class="badge bg-success">@product.StockQuantity</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Hết hàng</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="d-flex flex-wrap gap-1">
                                                    @if (product.IsActive)
                                                    {
                                                        <span class="badge bg-success">Kích hoạt</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-secondary">Tắt</span>
                                                    }
                                                    @if (product.IsFeatured)
                                                    {
                                                        <span class="badge bg-primary">
                                                            <i class="fas fa-star"></i> Nổi bật
                                                        </span>
                                                    }
                                                    @if (product.IsOnSale)
                                                    {
                                                        <span class="badge bg-danger">
                                                            <i class="fas fa-percent"></i> Giảm giá
                                                        </span>
                                                    }
                                                </div>
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a href="@Url.Action("Index", "ProductVariant", new { productId = product.Id })" class="btn btn-info" title="Quản lý biến thể">
                                                        <i class="fas fa-palette"></i>
                                                    </a>
                                                    <a href="@Url.Action("Edit", "Product", new { id = product.Id })" class="btn btn-warning" title="Sửa">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <button class="btn btn-danger delete-product-btn" data-id="@product.Id" title="Xóa">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            @if (!string.IsNullOrEmpty(filter.SearchTerm) || filter.IsActive.HasValue || filter.CategoryId.HasValue || filter.BrandId.HasValue || filter.IsFeatured.HasValue || filter.IsOnSale.HasValue)
                            {
                                <text>Không tìm thấy sản phẩm nào phù hợp với bộ lọc. <a href="javascript:void(0)" onclick="resetFilter()">Đặt lại bộ lọc</a></text>
                            }
                            else
                            {
                                <text>Chưa có sản phẩm nào. <a href="@Url.Action("Create", "Product")">Tạo sản phẩm mới</a></text>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/toastr@2.1.4/toastr.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/toastr@2.1.4/build/toastr.min.css" rel="stylesheet" />

    <script>
        $(function () {
            toastr.options = {
                closeButton: true,
                progressBar: true,
                positionClass: "toast-top-right",
                timeOut: 3000,
                extendedTimeOut: 1000
            };

            $('.delete-product-btn').on('click', function (e) {
                e.preventDefault();
                var id = $(this).data('id');
                Swal.fire({
                    title: 'Xóa sản phẩm?',
                    text: 'Bạn có chắc chắn muốn xóa sản phẩm này?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: 'Xóa',
                    cancelButtonText: 'Hủy'
                }).then(function (result) {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: '@Url.Action("Delete", "Product", new { area = "Admin" })',
                            type: 'POST',
                            data: {
                                id: id,
                                __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                            },
                            success: function (response) {
                                if (response.success) {
                                    toastr.success(response.message || 'Đã xóa sản phẩm');
                                    setTimeout(function () {
                                        window.location.reload();
                                    }, 800);
                                } else {
                                    toastr.error(response.message || 'Không thể xóa sản phẩm');
                                }
                            },
                            error: function () {
                                toastr.error('Có lỗi xảy ra khi xóa sản phẩm');
                            }
                        });
                    }
                });
            });
        });

        function resetFilter() {
            window.location.href = '@Url.Action("Index", "Product")';
        }
    </script>
    @Html.AntiForgeryToken()
}
