@model E_Commerce.Model.Models.Order
@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var details = ViewBag.OrderDetails as List<E_Commerce.Model.Models.OrderDetail> ?? new List<E_Commerce.Model.Models.OrderDetail>();
    var images = ViewBag.ProductImages as Dictionary<int, string> ?? new Dictionary<int, string>();
    var status = Model.Status?.ToLower() ?? "";
    var isPaid = Model.PaymentStatus?.ToLower() == "paid";
}

<div class="page-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">Đơn @Model.OrderNumber</h1>
            <p class="text-muted mb-0">Chi tiết và xử lý đơn hàng</p>
        </div>
        <a href="@Url.Action("Index", "Order", new { area = "Admin" })" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Quay lại
        </a>
    </div>
</div>

<div class="row g-3">
    <div class="col-lg-8">
        <!-- Sản phẩm -->
        <div class="card mb-3">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-bag me-2"></i>Sản phẩm</h5>
                <span class="text-muted small">@details.Count sản phẩm</span>
            </div>
            <div class="card-body">
                @if (details.Any())
                {
                    foreach (var item in details)
                    {
                        var img = images.ContainsKey(item.ProductId) && !string.IsNullOrWhiteSpace(images[item.ProductId])
                            ? images[item.ProductId]
                            : Url.Content("~/Content/images/default-product.png");
                        <div class="order-item d-flex align-items-center">
                            <div class="order-item__image">
                                <img src="@img" alt="@item.ProductName" onerror="this.src='@Url.Content("~/Content/images/default-product.png")'">
                            </div>
                            <div class="order-item__info flex-grow-1">
                                <div class="order-item__name">@item.ProductName</div>
                                <div class="order-item__meta text-muted small">
                                    @if (!string.IsNullOrEmpty(item.Color))
                                    {
                                        <span class="chip">@item.Color</span>
                                    }
                                    @if (!string.IsNullOrEmpty(item.Size))
                                    {
                                        <span class="chip">Size @item.Size</span>
                                    }
                                </div>
                                <div class="order-item__price">
                                    <span>@item.UnitPrice.ToString("N0") đ</span>
                                    <span class="text-muted"> × @item.Quantity</span>
                                </div>
                            </div>
                            <div class="order-item__total text-end">
                                <strong>@item.TotalPrice.ToString("N0") đ</strong>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center text-muted">Không có sản phẩm trong đơn.</div>
                }
            </div>
        </div>

        <!-- Thông tin giao hàng -->
        <div class="card mb-3">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-geo-alt me-2"></i>Thông tin giao hàng</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p class="mb-2"><strong>Người nhận:</strong> @Model.ShippingName</p>
                        <p class="mb-2"><strong>Điện thoại:</strong> @Model.ShippingPhone</p>
                    </div>
                    <div class="col-md-6">
                        <p class="mb-2"><strong>Địa chỉ:</strong> @Model.ShippingAddress</p>
                        @if (!string.IsNullOrWhiteSpace(Model.TrackingNumber))
                        {
                            <p class="mb-2"><strong>Mã vận đơn:</strong> @Model.TrackingNumber</p>
                        }
                    </div>
                </div>
                @if (!string.IsNullOrWhiteSpace(Model.CustomerNotes))
                {
                    <hr />
                    <p class="mb-0"><strong>Ghi chú:</strong> @Model.CustomerNotes</p>
                }
            </div>
        </div>

        <!-- Timeline -->
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Lịch sử đơn hàng</h5>
            </div>
            <div class="card-body">
                <div class="timeline">
                    <div class="timeline-item @(Model.CreatedDate != null ? "completed" : "")">
                        <div class="timeline-marker"></div>
                        <div class="timeline-content">
                            <strong>Đặt hàng</strong>
                            <span class="text-muted ms-2">@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</span>
                        </div>
                    </div>
                    @if (status != "cancelled")
                    {
                        <div class="timeline-item @(status == "processing" || status == "shipping" || status == "delivered" ? "completed" : "")">
                            <div class="timeline-marker"></div>
                            <div class="timeline-content">
                                <strong>Xác nhận</strong>
                                @if (status == "processing" || status == "shipping" || status == "delivered")
                                {
                                    <span class="text-muted ms-2">Đã xác nhận</span>
                                }
                            </div>
                        </div>
                        <div class="timeline-item @(status == "shipping" || status == "delivered" ? "completed" : "")">
                            <div class="timeline-marker"></div>
                            <div class="timeline-content">
                                <strong>Đang giao</strong>
                                @if (Model.ShippedDate.HasValue)
                                {
                                    <span class="text-muted ms-2">@Model.ShippedDate.Value.ToString("dd/MM/yyyy HH:mm")</span>
                                }
                            </div>
                        </div>
                        <div class="timeline-item @(status == "delivered" ? "completed" : "")">
                            <div class="timeline-marker"></div>
                            <div class="timeline-content">
                                <strong>Đã giao</strong>
                                @if (Model.DeliveredDate.HasValue)
                                {
                                    <span class="text-muted ms-2">@Model.DeliveredDate.Value.ToString("dd/MM/yyyy HH:mm")</span>
                                }
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="timeline-item completed cancelled">
                            <div class="timeline-marker"></div>
                            <div class="timeline-content">
                                <strong class="text-danger">Đã hủy</strong>
                                @if (Model.CancelledAt.HasValue)
                                {
                                    <span class="text-muted ms-2">@Model.CancelledAt.Value.ToString("dd/MM/yyyy HH:mm")</span>
                                }
                                @if (!string.IsNullOrWhiteSpace(Model.CancelReason))
                                {
                                    <div class="text-muted small">Lý do: @Model.CancelReason</div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <!-- Trạng thái & Thao tác -->
        <div class="card mb-3">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-gear me-2"></i>Trạng thái & Thao tác</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label text-muted small">Trạng thái đơn hàng</label>
                    <div>
                        <span class="badge fs-6 @GetStatusBadge(Model.Status)">@GetStatusText(Model.Status)</span>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label text-muted small">Thanh toán</label>
                    <div>
                        <span class="badge fs-6 @GetPaymentBadge(Model.PaymentStatus)">@GetPaymentText(Model.PaymentStatus)</span>
                        <span class="text-muted small ms-2">(@Model.PaymentMethod)</span>
                    </div>
                </div>
                
                <hr />
                
                <div class="d-grid gap-2">
                    @if (status == "pending")
                    {
                        <button type="button" class="btn btn-success btn-confirm" data-id="@Model.Id" data-order="@Model.OrderNumber">
                            <i class="bi bi-check-circle me-1"></i>Xác nhận đơn hàng
                        </button>
                    }
                    @if (status == "processing")
                    {
                        <button type="button" class="btn btn-info btn-ship" data-id="@Model.Id" data-order="@Model.OrderNumber">
                            <i class="bi bi-truck me-1"></i>Bắt đầu giao hàng
                        </button>
                    }
                    @if (status == "shipping")
                    {
                        <button type="button" class="btn btn-success btn-delivered" data-id="@Model.Id" data-order="@Model.OrderNumber">
                            <i class="bi bi-box-seam me-1"></i>Xác nhận đã giao
                        </button>
                    }
                    @if (status == "pending" || status == "processing")
                    {
                        <button type="button" class="btn btn-outline-danger btn-cancel" data-id="@Model.Id" data-order="@Model.OrderNumber">
                            <i class="bi bi-x-circle me-1"></i>Hủy đơn hàng
                        </button>
                    }
                    @if (!isPaid && status != "cancelled" && status != "pending")
                    {
                        <button type="button" class="btn btn-warning btn-paid" data-id="@Model.Id" data-order="@Model.OrderNumber">
                            <i class="bi bi-cash-coin me-1"></i>Đánh dấu đã thanh toán
                        </button>
                    }
                    @if (isPaid && status == "cancelled")
                    {
                        <button type="button" class="btn btn-secondary btn-refund" data-id="@Model.Id" data-order="@Model.OrderNumber">
                            <i class="bi bi-arrow-counterclockwise me-1"></i>Đánh dấu hoàn tiền
                        </button>
                    }
                </div>
            </div>
        </div>

        <!-- Tóm tắt -->
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-receipt me-2"></i>Tóm tắt</h5>
            </div>
            <div class="card-body">
                <div class="summary-row">
                    <span>Tạm tính</span>
                    <span>@Model.SubTotal.ToString("N0") đ</span>
                </div>
                <div class="summary-row">
                    <span>Phí vận chuyển</span>
                    <span>@Model.ShippingFee.ToString("N0") đ</span>
                </div>
                @if (Model.DiscountAmount > 0)
                {
                    <div class="summary-row text-danger">
                        <span>Giảm giá</span>
                        <span>-@Model.DiscountAmount.ToString("N0") đ</span>
                    </div>
                }
                <div class="summary-row total">
                    <span>Tổng cộng</span>
                    <span class="text-primary">@Model.TotalAmount.ToString("N0") đ</span>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusBadge(string status)
    {
        switch (status?.ToLower())
        {
            case "pending": return "bg-warning text-dark";
            case "processing": return "bg-info";
            case "shipping": return "bg-primary";
            case "delivered": return "bg-success";
            case "cancelled": return "bg-danger";
            default: return "bg-secondary";
        }
    }
    
    string GetStatusText(string status)
    {
        switch (status?.ToLower())
        {
            case "pending": return "Chờ xác nhận";
            case "processing": return "Đang xử lý";
            case "shipping": return "Đang giao";
            case "delivered": return "Đã giao";
            case "cancelled": return "Đã hủy";
            case "completed": return "Hoàn tất";
            default: return status ?? "N/A";
        }
    }
    
    string GetPaymentBadge(string status)
    {
        switch (status?.ToLower())
        {
            case "pending": return "bg-warning text-dark";
            case "paid": return "bg-success";
            case "failed": return "bg-danger";
            case "refunded": return "bg-secondary";
            default: return "bg-secondary";
        }
    }
    
    string GetPaymentText(string status)
    {
        switch (status?.ToLower())
        {
            case "pending": return "Chưa thanh toán";
            case "paid": return "Đã thanh toán";
            case "failed": return "Thất bại";
            case "refunded": return "Đã hoàn tiền";
            default: return status ?? "N/A";
        }
    }
}

@section scripts {
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Toastr -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    
    <script>
        toastr.options = {
            "closeButton": true,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "timeOut": "3000"
        };

        // Xác nhận đơn hàng
        $('.btn-confirm').click(function() {
            var id = $(this).data('id');
            var orderNumber = $(this).data('order');
            
            Swal.fire({
                title: 'Xác nhận đơn hàng?',
                text: `Bạn có chắc muốn xác nhận đơn ${orderNumber}?`,
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#28a745',
                cancelButtonColor: '#6c757d',
                confirmButtonText: '<i class="bi bi-check-circle me-1"></i>Xác nhận',
                cancelButtonText: 'Hủy'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('@Url.Action("Confirm", "Order", new { area = "Admin" })', { id: id }, function(res) {
                        if (res.success) {
                            toastr.success(res.message);
                            setTimeout(() => location.reload(), 1000);
                        } else {
                            toastr.error(res.message);
                        }
                    });
                }
            });
        });

        // Bắt đầu giao hàng
        $('.btn-ship').click(function() {
            var id = $(this).data('id');
            var orderNumber = $(this).data('order');
            
            Swal.fire({
                title: 'Bắt đầu giao hàng?',
                html: `<p>Đơn hàng: <strong>${orderNumber}</strong></p>
                       <input type="text" id="trackingNumber" class="swal2-input" placeholder="Mã vận đơn (không bắt buộc)">`,
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#17a2b8',
                cancelButtonColor: '#6c757d',
                confirmButtonText: '<i class="bi bi-truck me-1"></i>Bắt đầu giao',
                cancelButtonText: 'Hủy',
                preConfirm: () => {
                    return document.getElementById('trackingNumber').value;
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('@Url.Action("StartShipping", "Order", new { area = "Admin" })', { id: id, trackingNumber: result.value }, function(res) {
                        if (res.success) {
                            toastr.success(res.message);
                            setTimeout(() => location.reload(), 1000);
                        } else {
                            toastr.error(res.message);
                        }
                    });
                }
            });
        });

        // Đánh dấu đã giao
        $('.btn-delivered').click(function() {
            var id = $(this).data('id');
            var orderNumber = $(this).data('order');
            
            Swal.fire({
                title: 'Xác nhận đã giao hàng?',
                text: `Đơn ${orderNumber} đã được giao thành công?`,
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#28a745',
                cancelButtonColor: '#6c757d',
                confirmButtonText: '<i class="bi bi-box-seam me-1"></i>Đã giao',
                cancelButtonText: 'Hủy'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('@Url.Action("MarkDelivered", "Order", new { area = "Admin" })', { id: id }, function(res) {
                        if (res.success) {
                            toastr.success(res.message);
                            setTimeout(() => location.reload(), 1000);
                        } else {
                            toastr.error(res.message);
                        }
                    });
                }
            });
        });

        // Hủy đơn hàng
        $('.btn-cancel').click(function() {
            var id = $(this).data('id');
            var orderNumber = $(this).data('order');
            
            Swal.fire({
                title: 'Hủy đơn hàng?',
                html: `<p>Bạn có chắc muốn hủy đơn <strong>${orderNumber}</strong>?</p>
                       <input type="text" id="cancelReason" class="swal2-input" placeholder="Lý do hủy (không bắt buộc)">`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: '<i class="bi bi-x-circle me-1"></i>Hủy đơn',
                cancelButtonText: 'Quay lại',
                preConfirm: () => {
                    return document.getElementById('cancelReason').value;
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('@Url.Action("Cancel", "Order", new { area = "Admin" })', { id: id, reason: result.value }, function(res) {
                        if (res.success) {
                            toastr.success(res.message);
                            setTimeout(() => location.reload(), 1000);
                        } else {
                            toastr.error(res.message);
                        }
                    });
                }
            });
        });

        // Đánh dấu đã thanh toán
        $('.btn-paid').click(function() {
            var id = $(this).data('id');
            var orderNumber = $(this).data('order');
            
            Swal.fire({
                title: 'Xác nhận thanh toán?',
                text: `Đánh dấu đơn ${orderNumber} đã thanh toán?`,
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#ffc107',
                cancelButtonColor: '#6c757d',
                confirmButtonText: '<i class="bi bi-cash-coin me-1"></i>Đã thanh toán',
                cancelButtonText: 'Hủy'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('@Url.Action("MarkPaid", "Order", new { area = "Admin" })', { id: id }, function(res) {
                        if (res.success) {
                            toastr.success(res.message);
                            setTimeout(() => location.reload(), 1000);
                        } else {
                            toastr.error(res.message);
                        }
                    });
                }
            });
        });

        // Đánh dấu hoàn tiền
        $('.btn-refund').click(function() {
            var id = $(this).data('id');
            var orderNumber = $(this).data('order');
            
            Swal.fire({
                title: 'Xác nhận hoàn tiền?',
                text: `Đánh dấu đơn ${orderNumber} đã hoàn tiền?`,
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#6c757d',
                cancelButtonColor: '#dc3545',
                confirmButtonText: '<i class="bi bi-arrow-counterclockwise me-1"></i>Hoàn tiền',
                cancelButtonText: 'Hủy'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('@Url.Action("MarkRefunded", "Order", new { area = "Admin" })', { id: id }, function(res) {
                        if (res.success) {
                            toastr.success(res.message);
                            setTimeout(() => location.reload(), 1000);
                        } else {
                            toastr.error(res.message);
                        }
                    });
                }
            });
        });
    </script>
    
    <style>
        .order-item {
            padding: 12px 0;
            border-bottom: 1px solid #f1f1f1;
            gap: 12px;
        }
        .order-item:last-child { border-bottom: none; }
        .order-item__image img {
            width: 70px;
            height: 70px;
            object-fit: cover;
            border-radius: 8px;
            border: 1px solid #eee;
        }
        .order-item__name { font-weight: 600; margin-bottom: 4px; }
        .order-item__price { font-weight: 600; color: #0d6efd; }
        .chip {
            display: inline-flex;
            align-items: center;
            padding: 4px 8px;
            background: #f1f3f5;
            border-radius: 12px;
            margin-right: 4px;
            color: #4a5568;
        }
        .summary-row {
            display: flex;
            justify-content: space-between;
            padding: 8px 0;
        }
        .summary-row.total {
            font-weight: 700;
            font-size: 1.1em;
            border-top: 2px solid #e5e5e5;
            margin-top: 8px;
            padding-top: 12px;
        }
        
        /* Timeline */
        .timeline {
            position: relative;
            padding-left: 30px;
        }
        .timeline::before {
            content: '';
            position: absolute;
            left: 8px;
            top: 0;
            bottom: 0;
            width: 2px;
            background: #e9ecef;
        }
        .timeline-item {
            position: relative;
            padding-bottom: 20px;
        }
        .timeline-item:last-child {
            padding-bottom: 0;
        }
        .timeline-marker {
            position: absolute;
            left: -26px;
            width: 14px;
            height: 14px;
            border-radius: 50%;
            background: #e9ecef;
            border: 2px solid #fff;
            box-shadow: 0 0 0 2px #e9ecef;
        }
        .timeline-item.completed .timeline-marker {
            background: #28a745;
            box-shadow: 0 0 0 2px #28a745;
        }
        .timeline-item.cancelled .timeline-marker {
            background: #dc3545;
            box-shadow: 0 0 0 2px #dc3545;
        }
        .timeline-content {
            padding-left: 5px;
        }
    </style>
}
